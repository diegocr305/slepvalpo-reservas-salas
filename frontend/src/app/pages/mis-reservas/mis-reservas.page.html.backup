<ion-header [translucent]="true">
  <ion-toolbar>
    <ion-title>Mis Reservas</ion-title>
  </ion-toolbar>
</ion-header>

<ion-content [fullscreen]="true">
  <ion-header collapse="condense">
    <ion-toolbar>
      <ion-title size="large">Mis Reservas</ion-title>
    </ion-toolbar>
  </ion-header>



  <!-- Loading -->
  <div *ngIf="cargando" class="loading-container">
    <ion-spinner name="crescent"></ion-spinner>
    <p>Cargando reservas...</p>
  </div>

  <!-- Sin reservas -->
  <div *ngIf="!cargando && !primeraCarga && reservas.length === 0" class="ion-text-center ion-padding">
    <ion-icon name="calendar-outline" size="large" color="medium"></ion-icon>
    <h2>No tienes reservas</h2>
    <p>Crea tu primera reserva para comenzar</p>
    <ion-button routerLink="/tabs/reservar">
      <ion-icon slot="start" name="calendar-outline"></ion-icon>
      Nueva Reserva
    </ion-button>
  </div>

  <!-- Lista de reservas -->
  <div *ngIf="!cargando && reservas.length > 0" class="ion-padding">
    <ion-card *ngFor="let reserva of reservas" class="reserva-card">
      <ion-card-header>
        <div class="header-row">
          <div class="sala-title">
            <h2>Sala {{reserva.sala_nombre}}</h2>
            <p>Edificio {{reserva.edificio_nombre}}</p>
          </div>
          <ion-chip [color]="getColorEstado(reserva.estado)">
            <ion-icon [name]="getIconoEstado(reserva.estado)"></ion-icon>
            <ion-label>{{reserva.estado | titlecase}}</ion-label>
          </ion-chip>
        </div>
      </ion-card-header>

      <ion-card-content>
        <div class="info-grid">
          <div class="info-item">
            <ion-icon name="calendar-outline"></ion-icon>
            <div>
              <strong>Fecha</strong>
              <p>{{reserva.fecha}}</p>
            </div>
          </div>
          
          <div class="info-item">
            <ion-icon name="time-outline"></ion-icon>
            <div>
              <strong>Horario</strong>
              <p>{{reserva.hora_inicio}} - {{reserva.hora_fin}}</p>
            </div>
          </div>
          
          <div class="info-item" *ngIf="reserva.proposito">
            <ion-icon name="document-text-outline"></ion-icon>
            <div>
              <strong>Motivo de la reunión</strong>
              <p>{{reserva.proposito}}</p>
            </div>
          </div>
        </div>
        
        <ion-button 
          expand="block" 
          fill="outline" 
          color="danger"
          class="cancel-btn"
          (click)="cancelarReserva(reserva)">
          <ion-icon name="close-circle-outline" slot="start"></ion-icon>
          Cancelar Reserva
        </ion-button>
      </ion-card-content>
    </ion-card>
  </div>

  <!-- Botón flotante para nueva reserva -->
  <ion-fab vertical="bottom" horizontal="end" slot="fixed" *ngIf="reservas.length > 0">
    <ion-fab-button routerLink="/tabs/reservar" color="primary">
      <ion-icon name="add"></ion-icon>
    </ion-fab-button>
  </ion-fab>
</ion-content>